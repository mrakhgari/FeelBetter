<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity"
    android:background="@drawable/template2"
    android:onClick="hideKeyboard">


    <!-- INPUT -->

    <!-- ICON -->






    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/sofia"
        android:text="Sign Up"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="93dp"
        android:layout_height="92dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="212dp"

        android:background="@drawable/circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/FeelBetterLogo"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="212dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_2021_11_08_22_16_45" />

    <EditText
        android:id="@+id/signUpUsername"
        android:hint="enter your name"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:paddingLeft="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/signUpEmail"
        android:hint="enter your email"
        android:paddingLeft="50dp"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/signUpPassword"
        android:hint="create new password"
        android:paddingLeft="50dp"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />



    <EditText
        android:id="@+id/signUpDate"
        android:hint="yyyy-mm-dd"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:paddingLeft="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:inputType="date"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="182dp"
        android:layout_height="53dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="@font/pridi_light"
        android:text="Sign Up"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpDate"
        tools:ignore="MissingConstraints" />



    <ImageView
        android:id="@+id/email_icon"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:src="@drawable/email2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpUsername"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/calender_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:src="@drawable/calender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpPassword"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:src="@drawable/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpEmail"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:padding="3dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>