<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity"
    android:background="@drawable/template2"
    android:onClick="hideKeyboard">

    <ImageView
        android:id="@+id/calender_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/calendericon"
        android:padding="3dp"
        android:src="@drawable/calender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpPassword"
        tools:ignore="MissingConstraints" />

    <com.example.feelbetter.utils.MSPTextViewBold
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="232dp"
        android:text="@string/sign_up"
        android:textSize="@dimen/login_header_text_size"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="93dp"
        android:layout_height="92dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="212dp"

        android:background="@drawable/circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/FeelBetterLogo"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="212dp"
        android:contentDescription="@string/FBlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_2021_11_08_22_16_45" />

    <com.example.feelbetter.utils.MSPEditText
        android:id="@+id/signUpUsername"
        android:hint="@string/signupName"
        android:layout_width="@dimen/login_and_signup_fields_width"
        android:layout_height="@dimen/login_and_signup_fields_height"
        android:paddingStart="@dimen/login_and_signup_fields_padding_start"
        android:paddingEnd="@dimen/login_and_signup_fields_padding_end"
        android:layout_marginStart="@dimen/login_and_signup_fields_margin_start"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="@dimen/login_and_signup_fields_margin_end"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <com.example.feelbetter.utils.MSPEditText
        android:id="@+id/signUpEmail"
        android:hint="@string/loginEmail"
        android:paddingEnd="@dimen/login_and_signup_fields_padding_end"
        android:paddingStart="@dimen/login_and_signup_fields_padding_start"
        android:layout_width="@dimen/login_and_signup_fields_width"
        android:layout_height="@dimen/login_and_signup_fields_height"
        android:layout_marginStart="@dimen/login_and_signup_fields_margin_start"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="@dimen/login_and_signup_fields_margin_end"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <com.example.feelbetter.utils.MSPEditText
        android:id="@+id/signUpPassword"
        android:hint="@string/loginPassword"
        android:paddingStart="@dimen/login_and_signup_fields_padding_start"
        android:paddingEnd="@dimen/login_and_signup_fields_padding_end"
        android:layout_width="@dimen/login_and_signup_fields_width"
        android:layout_height="@dimen/login_and_signup_fields_height"
        android:layout_marginStart="@dimen/login_and_signup_fields_margin_start"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="@dimen/login_and_signup_fields_margin_end"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />



