    <com.example.feelbetter.utils.MSPButton
        android:id="@+id/signUp"
        android:layout_width="182dp"
        android:layout_height="53dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/button_background"
        android:text="@string/sign_up"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpDate"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/emailicon"
        android:padding="3dp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:src="@drawable/email2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpUsername"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/lock_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/lockicon"
        android:padding="3dp"
        android:src="@drawable/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpEmail"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:contentDescription="@string/userIcon"
        android:padding="3dp"
        android:src="@drawable/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <com.example.feelbetter.utils.MSPButton
        android:id="@+id/signUpDate"
        android:layout_width="246dp"
        android:layout_height="@dimen/login_and_signup_fields_height"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_button"
        android:text="@string/enter_your_birthday"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/calender_icon"
        app:layout_constraintTop_toBottomOf="@+id/signUpPassword"
        tools:ignore="MissingConstraints" />


